
.label-form-item{
	margin-bottom:10px;
}
.label-form-item > label{
	width:120px;
	text-align:left;
	display:inline-block;
	padding-left:10px;
}
.label-form-item > input,
.label-form-item > .city{
	display:inline-block;
	width:calc(100% - 160px);
	border:1px solid #333333;
	border-radius:5px;
	position:relative;
	height:30px;
	line-height:30px;
	top:10px;
	padding:0 5px;
}
.hasvalue{
	position:relative;
	display:inline-block;
	top:10px;
}
.modify-address .btn{
	width:60%;
	position:absolute;
	bottom:60px;
	right:0;
	left:0;
	margin:auto;
	background-color:rgba(74, 144, 226, 1);
	height:35px;
	line-height:35px;
	vertical-align:middle;
	color:#fff;
	text-align:center;
	border-radius:5px;
}

