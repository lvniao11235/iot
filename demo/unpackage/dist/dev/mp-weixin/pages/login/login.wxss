
page{
	position:relative;
	height:100%;
	width:100%;
}
.title-image{
	text-align:center;
	position:relative;
	top:100px;
	color:#26B37A;
	font-size:30px;
	font-weight:bold;
}
.title-image image{
	width:127px;
	height:31px;
}
.login-btns{
	position:absolute;
	top:0;
	right:0;
	bottom:0;
	left:0;
	margin:auto;
	height:110px;
	text-align:center;
}
.login-btns > view,
.login-btns > button{
	height:45px;
	line-height:45px;
	box-sizing:border-box;
	font-size:13px;
	border-radius:22.5px;
	width:60%;
	margin:auto;
}
.login-btns > button:first-child{
	background-color:#26B37A;
	color:#fff;
}
.login-btns > view:last-child{
	background-color:#fff;
	margin-top:20px;
	color:#26B37A;
	border:1px solid #26B37A;
}
.login-agree{
	width:100%;
	position:absolute;
	bottom:50px;
	text-align:center;
	font-size:12px;
}
.login-agree label{
	color:#26B37A;
}

