
page{
	background-color:#f2f2f2;
}
.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: left;
	-webkit-align-items: left;
	        align-items: left;
	-webkit-box-pack: left;
	-webkit-justify-content: left;
	        justify-content: left;
}
.text-area {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.title {
	font-size: 36rpx;
	color: #8f8f94;
}
.no-device image{
	width:150px;
	height:150px;
	display:block;
	margin:auto;
	margin-top:50px;
	margin-bottom:20px;
}
.no-device > view:first-child{
	color:#333333 !important;
}
.no-device > view{
	text-align:center;
	font-size:12px;
	color:#8f8f8f;
	margin-bottom:5px;
}
.no-device > view:last-child{
	width:150px;
	height:30px;
	line-height:30px;
	vertical-align:middle;
	text-align:center;
	border:1px solid rgba(74, 144, 226, 1);
	margin:20px auto;
	color:rgba(74, 144, 226, 1);
}
.device .address-switch .add-device{
	float:right;
	font-size:13px;
	line-height:20px;
	vertical-align:middle;
	margin-top:5px;
	margin-right:16px;
}
.device .address-switch .add-device .fa{
	height:20px;
	width:20px;
	text-align:center;
	background-color:rgba(22, 155, 213, 1);
	color:#fff;
	border-radius:10px;
	line-height:20px !important;
	vertical-align:middle !important;
}
.device .has-device .mydevice{
	border-left:2px solid rgba(22, 155, 213, 1);
	height:20px;
	line-height:20px;
	vertical-align:middle;
	margin-left:16px;
	padding-left:5px;
	font-size:14px;
	margin-top:10px;
}
.device .devices{
	font-size:0px;
}
.device .device-item{
	width:calc(50% - 10px);
	margin:5px;
	background-color:#fff;
	font-size:14px;
}
.device .device-item .title-right{
	float:right;
	margin-left:10px;
}

