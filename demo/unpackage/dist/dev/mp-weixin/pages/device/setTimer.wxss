
.set-timer > view{
	border:1px solid #000000;
	border-radius:10px;
	width:calc(90% - 10px);
	margin:10px auto;
}
.set-timer > view > .title{
	height:50px;
	line-height:50px;
	vertical-align:middle;
	padding:10px;
}
.set-timer > view > .title switch{
	float:right;
	margin-right:20px;
}
.set-timer .options > view{
	height:40px;
	line-height:40px;
	vertical-align:middle;
	padding:10px;
	border-top:1px solid #000000;
}
.set-timer .options .fa{
	float:right;
	margin-right:20px;
	font-size:35px;
	color:#B1B1B1;
}
.set-timer .options .repeat-value{
	color:#C0C0C0;
	display:inline-block;
	margin-left:20px;
	font-size:12px;
}
.set-timer .options > .timer,
.set-timer .options > .repeat{
	padding:0 10px;
	height:40px;
	line-height:40px;
	vertical-align:middle;
}
.set-timer .options .timer-disp{
	height:40px;
	line-height:40px;
	vertical-align:middle;
}
.set-timer .options > .timer > picker  .timer-value{
	color:#C0C0C0;
	display:inline-block;
	margin-left:20px;
	font-size:12px;
}

