
.modify-address .label-form-item{
	width:80%;
	margin:10px auto;
}
.modify-address .label-form-item > view{
	font-size:15px;
	color:#585858;
	margin-bottom:6px;
	font-weight:bold;
}
.label-form-item{
	margin-bottom:10px;
}
.label-form-item > label{
	width:120px;
	text-align:left;
	display:inline-block;
	padding-left:10px;
}
.label-form-item > input,
.label-form-item > .city{
	display:inline-block;
	width:100%;
	border-radius:5px;
	position:relative;
	height:40px;
	line-height:40px;
	top:10px;
	padding:0 5px;
	background-color:#F3F5F4;
	font-weight:normal !important;
	color:#585858;
}
.hasvalue{
	position:relative;
	display:inline-block;
	top:10px;
}
.modify-address .btn{
	width:80%;
	position:absolute;
	bottom:60px;
	right:0;
	left:0;
	margin:auto;
	background-color:#10AB6C;
	height:40px;
	line-height:40px;
	vertical-align:middle;
	color:#fff;
	text-align:center;
	border-radius:2px;
	font-size:16px;
}

