
.content-container{
	width:calc(100% - 28px);
	margin:0 auto;
}
.input-group{
	margin-bottom:10px;
}
.input-group .input-label{
	color:#585858;
	font-size:15px;
	height:25px;
	vertical-align:middle;
	font-weight:bold;
}
.input-group .input-control{
	width:100%;
	box-sizing: content-box;
	height:40px;
	background-color:#F3F5F4;
	position:relative;
}
.input-group .input-control input{
	width:calc(100% - 10px);
	margin:0 5px;
	height:100%;
	line-height:40px;
	vertical-align:middle;
	display:inline-block;
}
.input-group .input-ok{
	width:100%;
	height:40px;
	background-color:#10AB6C;
	color:#fff;
	font-size:16px;
	text-align:center;
	vertical-align:middle;
	margin-top:40px;
	line-height:40px;
}
.add-address-page .city{
	width:calc(100% - 30px) !important;
	margin:0 !important;
	margin-left:5px !important;
	height:100%;
	line-height:40px;
	vertical-align:middle;
	display:inline-block;
}

