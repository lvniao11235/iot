
.label-form-item{
	margin-bottom:10px;
}
.label-form-item > label{
	width:120px;
	text-align:left;
	display:inline-block;
	padding-left:10px;
}
.label-form-item > input,
.label-form-item > .city{
	display:inline-block;
	width:calc(100% - 160px);
	border:1px solid #333333;
	border-radius:5px;
	position:relative;
	height:30px;
	line-height:30px;
	top:10px;
	padding:0 5px;
}

